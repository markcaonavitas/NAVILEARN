<?xml version="1.0" encoding="utf-8" ?>
<local:NavitasGeneralPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NavitasBeta.Gauge"
    xmlns:linear="clr-namespace:Syncfusion.SfGauge.XForms;assembly=Syncfusion.SfGauge.XForms"
    xmlns:local="clr-namespace:NavitasBeta;assembly=NavitasBeta"
    x:Name="page"
    Title="Dashboard" >
    <ContentPage.Resources>
        <local:BoolInverterConverter x:Key="boolInverterConverter" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <AbsoluteLayout x:Name="AbsoluteLayout">
            <!--example method below to get rid of syncfusion stuff, uncomment line below and comment out all sync fusion elements-->
            <!--<local:HybridWebView x:Name = "hybridWebView" Uri = "DashboardScripting.html" EvaluateJavascript = "{Binding Source={x:Reference page}, Path=EvaluateJavascript, Mode=OneWayToSource}" InjectJavascript = "{Binding Source={x:Reference page}, Path=InjectJavascript, Mode=OneWayToSource}" HorizontalOptions = "FillAndExpand" VerticalOptions = "FillAndExpand" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All"/>-->
            <Grid x:Name="grid_gauge"
                  AbsoluteLayout.LayoutBounds="0, 0, 1, 0.98"
                  AbsoluteLayout.LayoutFlags="All"
                  BackgroundColor="Black">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".4*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width=".4*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="Center">
                    <!--if you already x:Name='ed it then bind it this way-->
                    <Label x:Name="TapWord" Text="Tap Caution Icon For Error Details" TextColor="Yellow" Opacity="{Binding Source={x:Reference Name=CONTROLLERERROR}, Path=Opacity}" BackgroundColor="Transparent" VerticalOptions="Start" HorizontalOptions="Center">
                        <Label.FontSize>
                            <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="20" />
                        </Label.FontSize>
                    </Label>
                </Grid>

                <Label x:Name ="MotorTemperature" TextColor="White" Text="{Binding Source={x:Reference Name=MTTEMPCF}, Path=Value, StringFormat='Motor Temp&#x0a; {0:0} C'}" IsVisible ="{Binding Source={x:Reference Name=MILESORKILOMETERS}, Path=Value}" HorizontalOptions="Start" VerticalOptions="Start"  Grid.Row="1" Grid.Column="0">
                    <Label.FontSize>
                        <OnIdiom x:TypeArguments="x:Double" Phone="12" Tablet="20" />
                    </Label.FontSize>
                </Label>
                <Label x:Name ="MotorTemperatureNobodyIsUsingTHis" TextColor="White" Text="{Binding Source={x:Reference Name=MTTEMPCF}, Path=Value, StringFormat='Motor Temp&#x0a; {0:0} F'}"  IsVisible ="{Binding Source={x:Reference Name=MILESORKILOMETERS}, Path=Value, Converter={StaticResource boolInverterConverter}}" HorizontalOptions="Start" VerticalOptions="Start"  Grid.Row="1" Grid.Column="0">
                    <Label.FontSize>
                        <OnIdiom x:TypeArguments="x:Double" Phone="12" Tablet="20" />
                    </Label.FontSize>
                </Label>


                <Label TextColor="White" Text="{Binding Source={x:Reference Name=HigherOfLogicPowerOrBatteryPostVoltage}, Path=Value, StringFormat='Battery Voltage&#x0a; {0:0.0} V'}"   HorizontalOptions="EndAndExpand"  VerticalOptions="Start" Grid.Row="1" Grid.Column="2">
                    <Label.FontSize>
                        <OnIdiom x:TypeArguments="x:Double" Phone="12" Tablet="20" />
                    </Label.FontSize>
                </Label>

                <linear:SfLinearGauge x:Name="MTEMPGaugeC" Scale=".5" Orientation="OrientationVertical"  VerticalOptions="Fill"  HorizontalOptions="Fill" Grid.Row="1" Grid.Column="0" IsVisible ="{Binding Source={x:Reference Name=MILESORKILOMETERS}, Path=Value}">
                    <linear:SfLinearGauge.Scales>
                        <linear:LinearScale Offset="10" OpposedPosition="True" LabelColor="White"   MinimumValue="0"   MaximumValue="200" Interval="50" ScaleBarColor="#FAECEC" MinorTicksPerInterval="1">
                            <linear:LinearScale.ScaleBarSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <OnPlatform.iOS>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="20" />
                                    </OnPlatform.iOS>
                                    <OnPlatform.Android>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="30" />
                                    </OnPlatform.Android>
                                </OnPlatform>
                            </linear:LinearScale.ScaleBarSize>
                            <linear:LinearScale.LabelFontSize>
                                <OnIdiom x:TypeArguments="x:Double" Phone="20" Tablet="20" />
                            </linear:LinearScale.LabelFontSize>
                            <linear:LinearScale.LabelOffset>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <OnPlatform.iOS>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="10" />
                                    </OnPlatform.iOS>
                                    <OnPlatform.Android>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="10" />
                                    </OnPlatform.Android>
                                </OnPlatform>
                            </linear:LinearScale.LabelOffset>
                            <linear:LinearScale.Pointers>
                                <linear:BarPointer Value="{Binding Source={x:Reference Name=MTTEMPCF}, Path=Value}" Color="Green" Thickness="30" >
                                    <linear:BarPointer.Thickness>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="20" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="30" />
                                            </OnPlatform.Android>
                                        </OnPlatform>
                                    </linear:BarPointer.Thickness>
                                </linear:BarPointer>
                            </linear:LinearScale.Pointers>
                            <linear:LinearScale.Ranges>
                                <linear:LinearRange StartValue="0" Color="Green"   EndValue="120" StartWidth="10" EndWidth="10">
                                </linear:LinearRange>
                                <linear:LinearRange  StartValue="120" Color="Yellow" EndValue="140" StartWidth="10" EndWidth="10">
                                </linear:LinearRange>
                                <linear:LinearRange  StartValue="140" Color="Red" EndValue="200" StartWidth="10" EndWidth="10">
                                </linear:LinearRange>
                            </linear:LinearScale.Ranges>
                            <linear:LinearScale.MajorTickSettings>
                                <linear:LinearTickSettings Length="6" Thickness="1" Color="White">
                                    <linear:LinearTickSettings.Offset>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.55" Tablet="-0.35" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.15" Tablet="-0.15" />
                                            </OnPlatform.Android>
                                        </OnPlatform>

                                    </linear:LinearTickSettings.Offset>
                                </linear:LinearTickSettings>
                            </linear:LinearScale.MajorTickSettings>
                            <linear:LinearScale.MinorTickSettings>
                                <linear:LinearTickSettings Length="3" Thickness="1" Color="White">
                                    <linear:LinearTickSettings.Offset>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.55" Tablet="-0.35" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.15" Tablet="-0.15" />
                                            </OnPlatform.Android>
                                        </OnPlatform>

                                    </linear:LinearTickSettings.Offset>
                                </linear:LinearTickSettings>
                            </linear:LinearScale.MinorTickSettings>
                        </linear:LinearScale>
                    </linear:SfLinearGauge.Scales>
                </linear:SfLinearGauge>

                <linear:SfLinearGauge x:Name="MTEMPGaugeF" Scale=".5" Orientation="OrientationVertical"  VerticalOptions="Fill"  HorizontalOptions="Fill" Grid.Row="1" Grid.Column="0" IsVisible ="{Binding Source={x:Reference Name=MILESORKILOMETERS}, Path=Value, Converter={StaticResource boolInverterConverter}}">
                    <linear:SfLinearGauge.Scales>
                        <linear:LinearScale Offset="10" OpposedPosition="True" LabelColor="White"   MinimumValue="0"   MaximumValue="400" Interval="100" ScaleBarColor="#FAECEC" MinorTicksPerInterval="1">
                            <linear:LinearScale.ScaleBarSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <OnPlatform.iOS>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="20" />
                                    </OnPlatform.iOS>
                                    <OnPlatform.Android>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="30" />
                                    </OnPlatform.Android>
                                </OnPlatform>
                            </linear:LinearScale.ScaleBarSize>
                            <linear:LinearScale.LabelFontSize>
                                <OnIdiom x:TypeArguments="x:Double" Phone="20" Tablet="20" />
                            </linear:LinearScale.LabelFontSize>
                            <linear:LinearScale.LabelOffset>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <OnPlatform.iOS>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="10" />
                                    </OnPlatform.iOS>
                                    <OnPlatform.Android>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="10" />
                                    </OnPlatform.Android>
                                </OnPlatform>
                            </linear:LinearScale.LabelOffset>
                            <linear:LinearScale.Pointers>
                                <linear:BarPointer Value="{Binding Source={x:Reference Name=MTTEMPCF}, Path=Value}" Color="Green" Thickness="30" >
                                    <linear:BarPointer.Thickness>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="20" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="30" />
                                            </OnPlatform.Android>
                                        </OnPlatform>
                                    </linear:BarPointer.Thickness>
                                </linear:BarPointer>
                            </linear:LinearScale.Pointers>
                            <linear:LinearScale.Ranges>
                                <linear:LinearRange StartValue="0" Color="Green"   EndValue="248" StartWidth="10" EndWidth="10">
                                </linear:LinearRange>
                                <linear:LinearRange  StartValue="248" Color="Yellow" EndValue="284" StartWidth="10" EndWidth="10">
                                </linear:LinearRange>
                                <linear:LinearRange  StartValue="284" Color="Red" EndValue="400" StartWidth="10" EndWidth="10">
                                </linear:LinearRange>
                            </linear:LinearScale.Ranges>
                            <linear:LinearScale.MajorTickSettings>
                                <linear:LinearTickSettings Length="6" Thickness="1" Color="White">
                                    <linear:LinearTickSettings.Offset>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.55" Tablet="-0.35" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.15" Tablet="-0.15" />
                                            </OnPlatform.Android>
                                        </OnPlatform>

                                    </linear:LinearTickSettings.Offset>
                                </linear:LinearTickSettings>
                            </linear:LinearScale.MajorTickSettings>
                            <linear:LinearScale.MinorTickSettings>
                                <linear:LinearTickSettings Length="3" Thickness="1" Color="White">
                                    <linear:LinearTickSettings.Offset>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.55" Tablet="-0.35" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.15" Tablet="-0.15" />
                                            </OnPlatform.Android>
                                        </OnPlatform>

                                    </linear:LinearTickSettings.Offset>
                                </linear:LinearTickSettings>
                            </linear:LinearScale.MinorTickSettings>
                        </linear:LinearScale>
                    </linear:SfLinearGauge.Scales>
                </linear:SfLinearGauge>




                <linear:SfLinearGauge x:Name="VBATGauge" Scale="0.5" Orientation="OrientationVertical" HorizontalOptions="Fill" VerticalOptions="Fill"  Grid.Row="1" Grid.Column="2">
                    <linear:SfLinearGauge.Scales>
                        <linear:LinearScale Offset="-10" LabelColor="White" x:Name="scale" MinimumValue="0" MaximumValue="100" Interval="20"  ScaleBarColor="#FAECEC" MinorTicksPerInterval="1" >
                            <linear:LinearScale.ScaleBarSize>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <OnPlatform.iOS>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="20" />
                                    </OnPlatform.iOS>
                                    <OnPlatform.Android>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="30" />
                                    </OnPlatform.Android>
                                </OnPlatform>
                            </linear:LinearScale.ScaleBarSize>
                            <linear:LinearScale.LabelFontSize>
                                <OnIdiom x:TypeArguments="x:Double" Phone="20" Tablet="20" />
                            </linear:LinearScale.LabelFontSize>
                            <linear:LinearScale.LabelOffset>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <OnPlatform.iOS>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="-10" Tablet="-10" />
                                    </OnPlatform.iOS>
                                    <OnPlatform.Android>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="-15" Tablet="-10" />
                                    </OnPlatform.Android>
                                </OnPlatform>
                            </linear:LinearScale.LabelOffset>
                            <linear:LinearScale.Pointers>
                                <linear:BarPointer Value="{Binding Source={x:Reference Name=HigherOfLogicPowerOrBatteryPostVoltage}, Path=Value}" Color="Lime"  Thickness="30">
                                    <linear:BarPointer.Thickness>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="20" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="30" />
                                            </OnPlatform.Android>
                                        </OnPlatform>
                                    </linear:BarPointer.Thickness>
                                </linear:BarPointer>
                            </linear:LinearScale.Pointers>
                            <linear:LinearScale.MajorTickSettings>
                                <linear:LinearTickSettings Length="6" Thickness="1" Color="White">
                                    <linear:LinearTickSettings.Offset>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone=".20" Tablet="0.20" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="-0.15" Tablet="-0.15" />
                                            </OnPlatform.Android>
                                        </OnPlatform>
                                    </linear:LinearTickSettings.Offset>
                                </linear:LinearTickSettings>
                            </linear:LinearScale.MajorTickSettings>
                            <linear:LinearScale.MinorTickSettings>
                                <linear:LinearTickSettings Length="3" Thickness="1" Color="White">
                                    <linear:LinearTickSettings.Offset>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <OnPlatform.iOS>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="0.20" Tablet="0.20" />
                                            </OnPlatform.iOS>
                                            <OnPlatform.Android>
                                                <OnIdiom x:TypeArguments="x:Double" Phone="0.15" Tablet="0.15" />
                                            </OnPlatform.Android>
                                        </OnPlatform>
                                    </linear:LinearTickSettings.Offset>
                                </linear:LinearTickSettings>
                            </linear:LinearScale.MinorTickSettings>
                        </linear:LinearScale>
                    </linear:SfLinearGauge.Scales>
                </linear:SfLinearGauge>

                <!--Don't know why but this is the third way of binding something to sync fusion stuff, the other two did not work-->
                <linear:SfCircularGauge x:Name="ROTORRPM" Scale="1"  Grid.Row="1" Grid.Column="1" >
                    <linear:SfCircularGauge.Scale>
                        <OnPlatform x:TypeArguments="x:Double">
                            <OnPlatform.iOS>
                                <OnIdiom x:TypeArguments="x:Double" Phone="1.3" Tablet="1.3" />
                            </OnPlatform.iOS>
                            <OnPlatform.Android>
                                <OnIdiom x:TypeArguments="x:Double" Phone="1.3" Tablet="1.3" />
                            </OnPlatform.Android>
                        </OnPlatform>
                    </linear:SfCircularGauge.Scale>
                    <linear:SfCircularGauge.Headers>
                        <linear:Header  x:Name="SPEEDUINT" Text="{Binding Path=parameterValueString}" TextSize="8" ForegroundColor="White" >
                             <linear:Header.Position>
                                <OnPlatform x:TypeArguments="Point" iOS="0.5,0.6" Android="0.5,0.6"  />
                            </linear:Header.Position>
                            <linear:Header.TextSize>
                                <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="15" />
                            </linear:Header.TextSize>
                        </linear:Header>
                        <linear:Header Text="{Binding Path=parameterValue, StringFormat='{0:0} rpm'}" TextSize="7" ForegroundColor="White">
                            <linear:Header.Position>
                                <OnPlatform x:TypeArguments="Point" iOS="0.5,0.8" Android="0.5,0.7"  />
                            </linear:Header.Position>
                            <linear:Header.TextSize>
                                <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="15" />
                            </linear:Header.TextSize>
                        </linear:Header>
                    </linear:SfCircularGauge.Headers>
                    <linear:SfCircularGauge.Scales>
                        <linear:Scale LabelOffset="0.7" LabelColor="White" StartAngle="135" StartValue="0"  EndValue="{Binding Source={x:Reference Name=SPEEDOMETERMAXSPEEDMKPH}, Path=Value}" Interval="5" SweepAngle="270" RimThickness="3" RimColor="White" MinorTicksPerInterval="1">
                            <linear:Scale.LabelFontSize>
                                <OnIdiom x:TypeArguments="x:Double" Phone="10" Tablet="15"/>
                            </linear:Scale.LabelFontSize>
                            <linear:Scale.Pointers>
                                <linear:RangePointer Value="{Binding Source={x:Reference Name=THRESHOLDONE}, Path=Value}" Color="Green" Thickness="10" Offset=".8">
                                    <linear:RangePointer.Thickness>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="10"/>
                                    </linear:RangePointer.Thickness>
                                </linear:RangePointer>
                                <linear:RangePointer RangeStart="{Binding Source={x:Reference Name=THRESHOLDONE}, Path=Value}" Color="Yellow" Value="{Binding Source={x:Reference Name=THRESHOLDTWO}, Path=Value}" Offset=".8">
                                    <linear:RangePointer.Thickness>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="10"/>
                                    </linear:RangePointer.Thickness>
                                </linear:RangePointer>
                                <linear:RangePointer RangeStart="{Binding Source={x:Reference Name=THRESHOLDTWO}, Path=Value}" Color="Red" Value="100" Offset=".8">
                                    <linear:RangePointer.Thickness>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="10"/>
                                    </linear:RangePointer.Thickness>
                                </linear:RangePointer>
                                <linear:NeedlePointer Value="{Binding Source={x:Reference Name=SPEED}, Path=Value}" Color="White" KnobColor="White"  LengthFactor="0.9" Type="Triangle" >
                                    <linear:NeedlePointer.KnobRadius>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="5" Tablet="8" />
                                    </linear:NeedlePointer.KnobRadius>
                                    <linear:NeedlePointer.Thickness>
                                        <OnIdiom x:TypeArguments="x:Double" Phone="2" Tablet="5" />
                                    </linear:NeedlePointer.Thickness>
                                </linear:NeedlePointer>
                            </linear:Scale.Pointers>
                            <linear:Scale.MajorTickSettings>
                                <linear:TickSettings Length="12" Offset=".9" Color ="White" Thickness="1"/>
                            </linear:Scale.MajorTickSettings>
                            <linear:Scale.MinorTickSettings>
                                <linear:TickSettings  Length="6" Offset=".9" Color ="White" Thickness="1"/>
                            </linear:Scale.MinorTickSettings>
                        </linear:Scale>
                    </linear:SfCircularGauge.Scales>
                </linear:SfCircularGauge>

                <Frame x:Name="LOCKED" Padding="0, 0, 0, 0"  BackgroundColor="Transparent" Grid.Row="1" Grid.Column="1" IsVisible="{Binding Path=parameterValue}" HorizontalOptions="Center" VerticalOptions="Center" >
                    <local:CustomImage x:Name="LockImage" Scale="1"  >
                        <Image.Source>
                            <OnPlatform x:TypeArguments="ImageSource" iOS="ionlocked.png" Android="ionlocked.png" WinPhone="Assets/ionlocked.png" />
                        </Image.Source>
                    </local:CustomImage>
                </Frame>

                <Frame x:Name="UNLOCKED" Padding="0, 0, 0, 0" BackgroundColor="Transparent" Grid.Row="2" Grid.Column="0" IsVisible="{Binding Path=parameterValue}" HorizontalOptions="Center" VerticalOptions="Center">
                    <local:CustomImage x:Name="UnlockImage">
                        <Image.Source>
                            <OnPlatform x:TypeArguments="ImageSource" iOS="ionunlocked.png" Android="ionunlocked.png" WinPhone="Assets/ionunlocked.png" />
                        </Image.Source>
                    </local:CustomImage>
                </Frame>

                <Image x:Name="NEUTRAL" Grid.Row="2" Grid.Column="1" IsVisible="{Binding Path=parameterValue}">
                    <Image.Source>
                        <OnPlatform x:TypeArguments="ImageSource" iOS="IconGearN.png" Android="IconGearN.png" WinPhone="Assets/IconGearN.png" />
                    </Image.Source>
                </Image>
                <Image x:Name="FORWARD" Grid.Row="2" Grid.Column="1" IsVisible="{Binding Path=parameterValue}">
                    <Image.Source>
                        <OnPlatform x:TypeArguments="ImageSource" iOS="IconGearF.png" Android="IconGearF.png" WinPhone="Assets/IconGearF.png" />
                    </Image.Source>
                </Image>
                <Image x:Name="REVERSE" Grid.Row="2" Grid.Column="1" IsVisible="{Binding Path=parameterValue}">
                    <Image.Source>
                        <OnPlatform x:TypeArguments="ImageSource" iOS="IconGearR.png" Android="IconGearR.png" WinPhone="Assets/IconGearR.png" />
                    </Image.Source>
                </Image>
                <Image x:Name="KEYENABLE" Opacity ="{Binding Path=parameterValue}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" IsVisible="True">
                    <Image.Source>
                        <OnPlatform x:TypeArguments="ImageSource" iOS="IconKey.png" Android="IconKey.png"  WinPhone="Assets/IconKey.png" />
                    </Image.Source>
                </Image>
                <!--      <ScrollView x:Name="StatusScrollview" Grid.Row="4"  Grid.Column="0" Grid.ColumnSpan="4"> -->
                <StackLayout x:Name="StatusStackLayout"  Grid.Row="3"  Grid.Column="0"  Grid.ColumnSpan="3" VerticalOptions="Start">
                    <Label  x:Name="StatusLabel" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="Black" TextColor="#367F56">
                        <Label.FontSize>
                            <OnIdiom x:TypeArguments="x:Double" Phone="12" Tablet="20" />
                        </Label.FontSize>
                    </Label>
                </StackLayout>
                <Label x:Name="SOFTWAREREVISION" Text="get this because it sets some comm and App opptions" IsVisible="False"/>
                <Label x:Name="STATE" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="KEYIN" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="CHARGERINTERLOCKIN" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="TOWIN" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="FORWARDSW" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="DISABLEBRAKESWITCH" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="DISABLEANALOGBRAKE" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="DISABLEFOOTSWITCH" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="VTHROTTLEV" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="VBRAKEV" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="REVERSESW" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="VEHICLELOCKED" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="Options" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="PBTEMPC" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="TIREDIAMETER" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="REARAXLERATIO" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="THROTTLEMIN" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="THROTTLEMAX" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="THROTTLEFULL" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
                <Label x:Name="BRAKEMIN" Text="this is how we read related values that are not shown on this page" IsVisible="False"/>
